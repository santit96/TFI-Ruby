<%= form_with(model: [@course,evaluation], local: true, class:"offset-md-4") do |form| %>
  <% if evaluation.errors.any? %>
    <div id="error_explanation">
      <h4>The evaluation couldn't be saved </h4>
      <ul>
      <% evaluation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row" style="margin-top: 5%" >
    <%= form.label :name ,class:"col-sm-2 col-form-label"%>
    <%= form.text_field :name, id: :evaluation_name %>
  </div>

  <div class="form-group row" >
    <%= form.label :date ,class:"col-sm-2 col-form-label"%>
    <%= form.date_select :date, id: :evaluation_date %>
  </div>

  <div class="form-group row" >
    <%= form.label :min_grade ,class:"col-sm-2 col-form-label"%>
    <%= form.text_field :min_grade, id: :evaluation_min_grade %>
  </div>


  <div class="actions offset-md-2">
    <%= form.submit %>
  </div>
<% end %>
