<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Dni</th>
      <th>Number</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.lastname %></td>
        <td><%= student.dni %></td>
        <td><%= student.number %></td>
        <td><%= student.course.name  %></td>
        <td><%= link_to 'Show', course_student_path(student.course,student) %></td>
        <td><%= link_to 'Edit', edit_course_student_path(student.course,student) %></td>
        <td><%= link_to 'Destroy', course_student_path(student.course,student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student',new_course_student_path %>
<%= link_to 'Back', course_url(@students.first.course) %>
