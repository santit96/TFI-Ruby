    <%= form.label :dni ,class:"col-sm-2 col-form-label"%>
    <%= form.number_field :dni, id: :student_dni %>
  </div>

  <div class="form-group row"  >
    <%= form.label :number ,class:"col-sm-2 col-form-label"%>
