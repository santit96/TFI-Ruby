<%= form_with(model: course, local: true,class:"offset-md-4") do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h4>The course couldn't be saved </h4>
      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group row" style="margin-top: 5%">
    <%= form.label :name , class:"col-sm-2 col-form-label"%>
    <%= form.text_field :name, id: :course_name , class:"form-control col-md-4"%>
  </div>

  <div  class="form-group row" >
    <%= form.label :year, class:"col-sm-2 col-form-label" %>
    <%= form.number_field :year, id: :course_year, class:"form-control col-md-4" %>
  </div>

 

  <div class="actions offset-md-2">
    <%= form.submit %>
  </div>
<% end %>
