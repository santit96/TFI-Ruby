<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="sign-in-form">
  <h2 >Log in</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class:"sign-in-form-username" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off",class:"sign-in-form-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field" >
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style:"display:inline" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in",class:"sign-in-form-button" %>
  </div>
  </div>
<% end %>

